<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyXamlApp.AlertDialogPage">
  <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
    <Button Text="Invoke alert" Clicked="OnButtonClicked" HorizontalOptions="CenterAndExpand" FontSize="Large" />
    <Label Text="Click button to invoke alert" x:Name="label" FontSize="Large" />
  </StackLayout>
</ContentPage>